{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "title": "Share of people aged 15 to 49 years old who are infected with HIV, 2019",
  "width": 800,
  "height": 600,
  "projection": {"type": "equirectangular"},
  "data": {
    "url": "https://raw.githubusercontent.com/Dixon20/FIT3179/main/ne_110m.json",
    "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
  },
  "transform": [
    {
      "lookup": "properties.NAME",
      "from": {
        "data": {
          "url": "https://raw.githubusercontent.com/Dixon20/FIT3179/main/hiv_map2.csv"
        },
        "key": "location",
        "fields": ["val"]
      }
    }
  ],
  "mark": {"type": "geoshape"},
  "encoding": {
    "color": {
      "field": "val",
      "type": "quantitative",
      "title": "% of Population",
      "scale": {
        "type": "threshold",
        "domain": [0.01, 0.1, 0.2],
        "range": ["#fdbe85", "#fd8d3c", "#d94701"]
      },
      "legend": {"format": ".2%"}
    },
    "tooltip": [
      {"field": "properties.NAME", "type": "nominal", "title": "Country"},
      {
        "field": "val",
        "type": "quantitative",
        "format": ".2%",
        "title": "% of population living with HIV"
      }
    ]
  },
  "config": {}
}